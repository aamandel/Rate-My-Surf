<div class="review">
    <div class="card" style="margin: 10px;">
        <div class="card-content">
            <div>
                <a href="/review/{{id}}" class="title is-4">{{title}}</a>
            </div>
            {{#if beach}}
            <a href="/beach/{{beach.id}}" class="is-6">{{beach.name}} Beach</a>
            {{/if}}
            <p class="subtitle is-6 has-text-grey-light" style="margin-bottom: 10px;">
                @{{user.username}}</p>

            <p>{{body}}</p>
            <div class="content has-text-grey-light is-size-7">
                <div>{{format_date created_at}}</div>
                <div>
                    {{format_plural "point" vote_count}} |
                    <a href="/review/{{id}}">{{format_plural "comment" comments.length}}</a>
                </div>
            </div>

        </div>
    </div>
</div>